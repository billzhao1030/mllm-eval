{
  "version": "0.2.0",
  "configurations": [
        {
            "name": "Python Debugger: MLLM_Eval",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
            },
            "args": [
                "--config_dir=configs/experiment.yaml",
            ],
            "justMyCode": true
        },
    ]
}
